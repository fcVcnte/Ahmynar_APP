@model Ahmynar_MVC.Models.BudgetVM

@{
    ViewData["Title"] = "Detalhes do Orçamento";
}

<head>
    <link rel="stylesheet" href="~/css/Budget/budget.css" asp-append-version="true" />
</head>

<h1 class="page-title">Detalhes do Orçamento</h1>

<div class="detail-page d-flex flex-column mb-4">
    <h4 class="detail-name">@Html.DisplayFor(model => model.Number) ► @Html.DisplayFor(model => model.Status)</h4>
    <div class="group-data mb-3">
        <span class="group-desc">Dados dos produtos</span>
        <div class="d-flex justify-content-between mt-2">
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.ProductIds)
                </div>
                @foreach (var product in Model.Products)
                {
                    <div class="group-row-data">
                        @product.Description
                    </div>
                }
            </div>
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.TotalProducts)
                </div>
                <div class="group-row-data">
                    @Html.DisplayFor(model => model.TotalProducts)
                </div>
            </div>
        </div>
    </div>
    <div class="group-data mb-3">
        <span class="group-desc">Dados dos serviços</span>
        <div class="d-flex justify-content-between mt-2">
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.ServiceIds)
                </div>
                @foreach (var service in Model.Services)
                {
                    <div class="group-row-data">
                        @service.Description
                    </div>
                }
            </div>
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.TotalServices)
                </div>
                <div class="group-row-data">
                    @Html.DisplayFor(model => model.TotalServices)
                </div>
            </div>
        </div>
    </div>
    <div class="group-data mb-3">
        <span class="group-desc">Dados do orçamento</span>
        <div class="d-flex justify-content-between mt-2">
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.ExpireDate)
                </div>
                <div class="group-row-data">
                    @Html.DisplayFor(model => model.ExpireDate)
                </div>
            </div>
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.Total)
                </div>
                <div class="group-row-data">
                    @Html.DisplayFor(model => model.Total)
                </div>
            </div>
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.CustomerId)
                </div>
                <div class="group-row-data">
                    @(Model.Customer.TradeName == null ? Model.Customer.CustomerName : Model.Customer.TradeName)
                </div>
            </div>
        </div>
    </div>
    <div class="group-data mb-3">
        <span class="group-desc">Outros</span>
        <div class="d-flex justify-content-between mt-2">
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.Obs)
                </div>
                <div class="group-row-data">
                    @Html.DisplayFor(model => model.Obs)
                </div>
            </div>
        </div>
    </div>
</div>
<div class="footer-buttoms d-flex justify-content-end">
    <form asp-action="Index" method="get">
        <button type="submit" class="btn-details">
            <img src="~/icon/back.svg" class="btn-details-icon" /> Voltar
        </button>
    </form>
</div>