@model Ahmynar_MVC.Models.ProductVM

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1 class="page-title">Detalhes do Produto</h1>

<div class="detail-page d-flex flex-column mb-4">
    <h4 class="detail-name">@Html.DisplayFor(model => model.Description) ► @Html.DisplayFor(model => model.GroupProduct)</h4>
    <div class="group-data mb-2">
        <span class="group-desc">Dados de compra</span>
        <div class="d-flex justify-content-between mt-2">
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.Unit)
                </div>
                <div class="group-row-data">
                    @Html.DisplayFor(model => model.Unit)
                </div>
            </div>
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.PurchasePrice)
                </div>
                <div class="group-row-data">
                    @Html.DisplayFor(model => model.PurchasePrice)
                </div>
            </div>
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.Supplier.TradeName)
                </div>
                <div class="group-row-data">
                    @Html.DisplayFor(model => model.Supplier.TradeName)
                </div>
            </div>
        </div>
    </div>
    <div class="group-data mb-2">
        <span class="group-desc">Dados de venda</span>
        <div class="d-flex justify-content-between mt-2">
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.Quantity)
                </div>
                <div class="group-row-data">
                    @Html.DisplayFor(model => model.Quantity)
                </div>
            </div>
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.SalePrice)
                </div>
                <div class="group-row-data">
                    @Html.DisplayFor(model => model.SalePrice)
                </div>
            </div>
        </div>
    </div>
    <div class="group-data mb-2">
        <span class="group-desc">Outros</span>
        <div class="d-flex justify-content-between mt-2">
            <div class="group-row d-flex flex-column">
                <div class="group-row-label">
                    @Html.DisplayNameFor(model => model.Obs)
                </div>
                <div class="group-row-data">
                    @Html.DisplayFor(model => model.Obs)
                </div>
            </div>
        </div>
    </div>
</div>
<div class="footer-buttoms d-flex justify-content-end">
    <form asp-action="Index" method="get">
        <button type="submit" class="btn-details">
            <img src="~/icon/back.svg" class="btn-details-icon" /> Voltar
        </button>
    </form>
    <form asp-action="Edit" asp-route-id="@Model.Id" method="get">
        <button type="submit" class="btn-details">
            <img src="~/icon/edit.svg" class="btn-details-icon" /> Editar Produto
        </button>
    </form>
</div>